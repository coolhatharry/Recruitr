<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="coreylee.com.recruitr.UserProfile">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/profile_picture"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/profile_picture" />

    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/profile_picture" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headline"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/profile_picture" />

    <TextView
        android:id="@+id/industry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_name"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/profile_picture" />

    <View
        android:id="@+id/page_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/industry"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_2"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/profile_picture" />

    <TextView
        android:id="@+id/job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_name"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/profile_picture" />

    <TextView
        android:id="@+id/job_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_title"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/profile_picture" />

    <View
        android:id="@+id/page_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/job_years"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>
